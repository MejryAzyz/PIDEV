<AnchorPane style="-fx-background-color: #f4f4f4;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ListeTransport">
   <VBox layoutX="252.0" layoutY="10.0" prefHeight="85.0" style="-fx-background-color: #0ba84a;" />

    <VBox alignment="TOP_CENTER" fillWidth="true" layoutX="272.0" layoutY="108.8" prefHeight="701.0" prefWidth="778.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="272.0" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="109.0">

        <Label style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Gestion des Transports" />

        <TableView fx:id="tableTransport" prefHeight="500.0" prefWidth="787.0" style="-fx-background-color: white; -fx-border-color: #ddd; -fx-border-radius: 8px;" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colId" prefWidth="300" text="ID" />
                <TableColumn fx:id="colType" prefWidth="300" text="Type" />
                <TableColumn fx:id="colCapacite" prefWidth="300" text="Capacité" />
                <TableColumn fx:id="colPrix" prefWidth="300" text="Prix" />
            </columns>
        </TableView>


        <HBox alignment="CENTER" spacing="20" style="-fx-padding: 15px; -fx-border-radius: 10px; -fx-background-radius: 10px;">
            <Button fx:id="btnAjouter" onAction="#btnAjouterAction" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10px 20px; -fx-background-radius: 8px;" text="➕ Ajouter" />
            <Button fx:id="btnModifier" disable="true" onAction="#btnModifierAction" style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10px 20px; -fx-background-radius: 8px;" text="✏ Modifier" />
            <Button fx:id="btnSupprimer" disable="true" onAction="#btnSupprimerAction" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10px 20px; -fx-background-radius: 8px;" text="🗑 Supprimer" />
        </HBox>

        <VBox fx:id="ajoutPanel" alignment="CENTER" prefHeight="348.0" prefWidth="787.0" spacing="15" style="-fx-background-color: white; -fx-border-radius: 10px; -fx-padding: 30px; -fx-border-color: #ddd; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10, 0, 0, 5);" visible="false">

            <Label fx:id="panelTitle" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #333;" text="Ajouter un Transport" />

            <ComboBox fx:id="comboType" promptText="Sélectionnez un type" style="-fx-padding: 12px; -fx-font-size: 16px; -fx-border-color: #bbb; -fx-border-radius: 5px;" />
            <TextField fx:id="txtCapacite" promptText="Capacité" style="-fx-padding: 12px; -fx-font-size: 16px; -fx-border-color: #bbb; -fx-border-radius: 5px;" />
            <TextField fx:id="txtPrix" promptText="Prix" style="-fx-padding: 12px; -fx-font-size: 16px; -fx-border-color: #bbb; -fx-border-radius: 5px;" />

            <HBox alignment="CENTER" spacing="20">
                <Button fx:id="btnConfirm" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10px 20px; -fx-background-radius: 8px;" text="✔ Confirmer" />
                <Button fx:id="btnCancel" onAction="#btnAnnulerAjout" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10px 20px; -fx-background-radius: 8px;" text="❌ Annuler" />
            </HBox>
        </VBox>
    </VBox>

    <VBox alignment="TOP_CENTER" prefHeight="800.0" prefWidth="241.0" spacing="20" style="-fx-background-color: #0ba84a; -fx-padding: 20px; -fx-border-radius: 10px;" AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.topAnchor="10">
      <children>
         <VBox prefHeight="111.0" prefWidth="164.0">
            <children>
               <ImageView fitHeight="114.0" fitWidth="155.0">
                  <image>
                     <Image url="@../../../../../Downloads/logopi2.png" />
                  </image>
                  <VBox.margin>
                     <Insets left="20.0" right="10.0" />
                  </VBox.margin>
               </ImageView>
            </children></VBox>
         <VBox prefHeight="200.0" prefWidth="217.0" spacing="6.0">
            <children>
               <Line endX="100.0" startX="-100.0" stroke="WHITE" />
               <Button mnemonicParsing="false" onAction="#navHeb" prefHeight="27.0" prefWidth="202.0" style="-fx-background-color: #0ba84a;" text="Gestion Hebergement" textFill="WHITE">
                  <font>
                     <Font size="16.0" />
                  </font>
               </Button>
               <Line endX="100.0" startX="-100.0" stroke="WHITE" />
               <Button mnemonicParsing="false" prefHeight="27.0" prefWidth="202.0" style="-fx-background-color: #0ba84a;" text="Gestion Transport" textFill="WHITE">
                  <font>
                     <Font size="16.0" />
                  </font>
               </Button>
               <Line endX="100.0" startX="-100.0" stroke="WHITE" />
            </children>
         </VBox>
      </children>
    </VBox>
</AnchorPane>
