<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.effect.InnerShadow?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.LinearGradient?>
<?import javafx.scene.paint.Stop?>

<ScrollPane prefHeight="600.0" prefWidth="1000.0" style="-fx-background-color: transparent;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.DetailCliniqueClientController">
    <!-- Fond avec dégradé -->
    <VBox prefHeight="918.0" prefWidth="982.0" style="-fx-background-color: linear-gradient(to bottom, #f0f4f8, #d9e2ec); -fx-padding: 20;">
        <!-- Conteneur principal pour les informations de la clinique -->
        <HBox spacing="20" style="-fx-padding: 10;">
            <!-- Image de la clinique avec ombre portée et bordure arrondie -->
            <ImageView fx:id="cliniqueImageView" fitHeight="250" fitWidth="400" style="-fx-border-color: #aaaaaa; -fx-border-width: 2px; -fx-background-color: #f4f4f4; -fx-background-radius: 10; -fx-border-radius: 10;">
                <effect>
                    <DropShadow color="#333333" radius="10" spread="0.2" />
                </effect>
            </ImageView>

            <!-- Section pour les informations de la clinique -->
            <VBox alignment="TOP_LEFT" spacing="15">
                <!-- Nom de la clinique avec dégradé de couleur -->
                <Label fx:id="nomLabel" style="-fx-font-size: 28px; -fx-font-weight: bold;">
                    <textFill>
                        <LinearGradient endX="1.0" endY="0.0" startX="0.0" startY="0.0">
                            <stops>
                                <Stop color="#4CAF50" offset="0.0" />
                                <Stop color="#35733e" offset="1.0" />
                            </stops>
                        </LinearGradient>
                    </textFill>
                </Label>

                <!-- Description de la clinique -->
                <HBox alignment="CENTER_LEFT" spacing="5">
                    <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #000000;" text="Description :" />
                    <Label fx:id="descriptionLabel" style="-fx-font-size: 16px; -fx-text-fill: #666666;" wrapText="true" />
                </HBox>

                <!-- Adresse de la clinique -->
                <HBox alignment="CENTER_LEFT" spacing="5">
                    <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #000000;" text="Adresse :" />
                    <Label fx:id="adresseLabel" style="-fx-font-size: 14px; -fx-text-fill: #666;" />
                </HBox>

                <!-- Email de la clinique -->
                <HBox alignment="CENTER_LEFT" spacing="5">
                    <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #000000;" text="Email :" />
                    <Label fx:id="emailLabel" style="-fx-font-size: 14px; -fx-text-fill: #666;" />
                </HBox>

                <!-- Téléphone de la clinique -->
                <HBox alignment="CENTER_LEFT" spacing="5">
                    <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #000000;" text="Téléphone :" />
                    <Label fx:id="telLabel" style="-fx-font-size: 14px; -fx-text-fill: #666;" />
                </HBox>
                <!-- Section pour afficher la carte -->

            </VBox>
        </HBox>

        <VBox>
            <ImageView fx:id="mapView" fitHeight="400" fitWidth="600" preserveRatio="true" />
        </VBox>



        <!-- Section pour la liste des docteurs (sur toute la largeur) -->
        <VBox style="-fx-padding: 20 30 10 30;">
            <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #000000;" text="Docteurs :" />
            <VBox fx:id="docteursContainer" alignment="TOP_CENTER" spacing="10" style="-fx-padding: 10;">
                <!-- Docteurs seront ajoutés ici dynamiquement -->
                <Label fx:id="prenomLabel" style="-fx-font-size: 16px; -fx-text-fill: #555555;" text="Prénom: " />
            </VBox>
        </VBox>

        <!-- Espace vide entre la liste des docteurs et la section du prix/bouton -->
        <Region prefHeight="30" />

        <!-- Section pour le prix de la clinique et le bouton Réserver -->
        <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-padding: 10 30;">
            <!-- Prix avec ombre portée -->
            <Label fx:id="prixLabel" style="-fx-font-size: 30px; -fx-font-weight: bold; -fx-text-fill: #35733e;">
                <effect>
                    <DropShadow color="#000000" offsetX="2" offsetY="2" radius="5" />
                </effect>
            </Label>

            <!-- Espacement flexible pour séparer Prix et Bouton -->
            <Region HBox.hgrow="ALWAYS" />

            <Button fx:id="pdfButton" style="-fx-font-size: 18px; -fx-background-color: #007BFF; -fx-text-fill: white;                    -fx-pref-width: 200; -fx-background-radius: 30; -fx-border-radius: 30; -fx-padding: 10 20;" text="Télécharger PDF">
            </Button>

            <!-- Bouton Réserver statique avec effet de profondeur -->
            <Button fx:id="reserverButton" style="-fx-font-size: 18px; -fx-background-color: #4CAF50; -fx-text-fill: white;                            -fx-pref-width: 200; -fx-background-radius: 30; -fx-border-radius: 30; -fx-padding: 10 20;" text="Réserver">
                <effect>
                    <InnerShadow color="#000000" offsetX="2" offsetY="2" radius="5" />
                </effect>
            </Button>
        </HBox>
    </VBox>
</ScrollPane>
