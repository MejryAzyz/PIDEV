<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="800.0" prefWidth="1100.0" styleClass="root" stylesheets="style3.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ClientTransport">

    <!-- Modern Navigation Bar -->
    <HBox alignment="CENTER_LEFT" prefHeight="60.0" prefWidth="1100.0" styleClass="nav-bar">
        <padding>
            <Insets bottom="10" left="20" right="20" top="10" />
        </padding>
        <TextField fx:id="searchBar" prefWidth="400.0" promptText="Search transport..." styleClass="modern-search-bar" />
        <Region HBox.hgrow="ALWAYS" />
        <Button styleClass="filter-button" text="Filter" />
    </HBox>

    <!-- Main Content -->
    <VBox alignment="TOP_CENTER" layoutY="70.0" maxHeight="Infinity" prefWidth="1100.0" spacing="20">
        <Label styleClass="modern-title" text="Available Transports" />

        <!-- Scrollable transport container -->
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" maxHeight="Infinity" prefWidth="1100.0" styleClass="modern-scroll-pane" vbarPolicy="AS_NEEDED">
            <VBox fx:id="transportContainer" spacing="15" styleClass="card-grid">
                <!-- Transport cards will be added dynamically here -->
            </VBox>
        </ScrollPane>
    </VBox>

</AnchorPane>
