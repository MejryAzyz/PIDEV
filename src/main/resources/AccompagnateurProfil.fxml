<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import jfxtras.scene.control.agenda.Agenda?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="Controllers.AccompagnateurProfil"
            prefHeight="600.0" prefWidth="800.0">

    <children>
        <HBox spacing="20" alignment="CENTER_LEFT" style="-fx-padding: 20px;">
            <!-- Profile Section -->
            <VBox spacing="10" alignment="CENTER">
                <ImageView fx:id="profileImage" fitWidth="150" fitHeight="150">
                    <image>
                        <Image url="@default-profile.png" preserveRatio="true" />
                    </image>
                </ImageView>
                <Button text="Edit Profile" fx:id="editProfileBtn" />
            </VBox>

            <!-- Calendar Section -->
            <Agenda fx:id="agenda" style="-fx-pref-width: 600px; -fx-pref-height: 500px;" />
        </HBox>
    </children>
</AnchorPane>
