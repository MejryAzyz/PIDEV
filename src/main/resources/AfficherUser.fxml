<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="500.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.AfficherUserController">
    <children>
        <TableView fx:id="table_utilisateur" layoutX="50.0" layoutY="80.0" prefHeight="300.0" prefWidth="800.0">
            <columns>
                <TableColumn fx:id="col_id" prefWidth="50.0" text="ID" />
                <TableColumn fx:id="col_nom" prefWidth="100.0" text="Nom" />
                <TableColumn fx:id="col_prenom" prefWidth="100.0" text="Prénom" />
                <TableColumn fx:id="col_email" prefWidth="150.0" text="Email" />
                <TableColumn fx:id="col_telephone" prefWidth="100.0" text="Téléphone" />
                <TableColumn fx:id="col_adresse" prefWidth="150.0" text="Adresse" />
                <TableColumn fx:id="col_date_naissance" prefWidth="148.0" text="Date Naissance" />
            </columns>
        </TableView>
        <HBox layoutX="50.0" layoutY="400.0">
            <children>
                <Button onAction="#deleteAction" text="Supprimer" />
                <Button layoutX="406.0" layoutY="420.0" mnemonicParsing="false" onAction="#modifierUtilisateur" prefHeight="26.0" prefWidth="112.0" style="-fx-background-color: #2980b9;" text="✏ Modifier" textFill="WHITE" />

            </children>
        </HBox>
        <Label layoutX="350.0" layoutY="30.0" text="Liste des Utilisateurs" />
    </children>
</AnchorPane>
