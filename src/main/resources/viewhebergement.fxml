<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns="http://javafx.com/javafx/20.0.2"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.Viewhebergement"
            stylesheets="@style2.css"
            style="-fx-background-color: #f9f9f9;">

    <ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED" styleClass="scroll-pane">
        <VBox spacing="30" alignment="CENTER" styleClass="main-container">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <!-- Title -->
            <Label fx:id="titreLabel" text="Accommodation Details"
                   styleClass="title-label" />

            <!-- Image and Description Section -->
            <HBox spacing="40" alignment="CENTER" styleClass="content-section">
                <ImageView fx:id="imageView" preserveRatio="true"
                           styleClass="card-image" />

                <VBox spacing="15" alignment="TOP_LEFT" styleClass="description-box">
                    <Label fx:id="descriptionLabel" text="Description not available"
                           styleClass="description-text" wrapText="true" />

                    <Button fx:id="bookButton" text="Book Now"
                            styleClass="book-button" onAction="#book" />
                </VBox>
            </HBox>

            <!-- Details Section -->
            <VBox spacing="15" alignment="TOP_LEFT" styleClass="details-box">
                <Label fx:id="nomLabel" text="Name: Unknown" styleClass="detail-title" />
                <Label fx:id="adresseLabel" text="ðŸ“ Address: Unknown" styleClass="detail-text" />
                <Label fx:id="tarifLabel" text="ðŸ’° Price: Unknown â‚¬ / night" styleClass="detail-text" />
            </VBox>

            <!-- Return Button -->
            <Button fx:id="retourButton" text="Return"
                    styleClass="return-button" onAction="#retour" alignment="CENTER" />
        </VBox>
    </ScrollPane>
</AnchorPane>